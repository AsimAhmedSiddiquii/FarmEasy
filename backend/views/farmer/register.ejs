<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Register | Farmer</title>
    <link rel="icon" type="image/png" href="/img/logo.jpg" />
    <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/auth.css" rel="stylesheet">
</head>

<body>
    <div class="wrapper">
        <div class="auth-content">
            <div class="card">
                <div class="card-body text-center">
                    <div class="mb-4">
                        <img class="brand" width="120" src="/img/logo.jpg" alt="bootstraper logo">
                    </div>
                    <h6 class="mb-4 text-muted">Welcome to FarmEasy, Register!</h6>
                    <form action="/farmer/register" method="post" enctype="multipart/form-data">
                        <div class="mb-3 text-start">
                            <label for="name" class="form-label">Farmer Name</label>
                            <input type="text" name="name" class="form-control" placeholder="Enter Farmer Name" required>
                        </div>
                        <div class="mb-3 text-start">
                            <label for="phone" class="form-label">Phone Number</label>
                            <input type="text" name="phone" maxlength="10" pattern="[789][0-9]{9}" class="form-control" placeholder="Enter Phone Number" required>
                        </div>
                        <div class="mb-3 text-start">
                            <label for="email" class="form-label">Email address</label>
                            <input type="email" name="email" class="form-control" placeholder="Enter Email Address" required>
                        </div>
                        <div class="mb-3 text-start">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" name="password" class="form-control" placeholder="Enter Password" required>
                        </div>
                        <div class="mb-3 text-start">
                            <label for="businessName" class="form-label">Farm Name</label>
                            <input type="text" name="businessName" class="form-control" placeholder="Enter Farm Name" required>
                        </div>
                        <div class="mb-3 text-start">
                            <label for="businessLogo" class="form-label">Farm Logo</label>
                            <input type="file" accept=".png" name="businessLogo" class="form-control" required>
                        </div>
                        <div class="mb-3 text-start">
                            <label for="businessDesc" class="form-label">Farm Description</label>
                            <input type="text" name="businessDesc" class="form-control" placeholder="Enter Farm Description" required>
                        </div>
                        <div class="mb-3 text-start">
                            <label for="address" class="form-label">Farm Address</label>
                            <input type="text" name="address" class="form-control" placeholder="Enter Farm Address" required>
                        </div>
                        <div class="mb-3 text-start">
                            <label for="pincode" class="form-label">Pincode</label>
                            <input type="text" maxlength="6" name="pincode" pattern="[0-9]{6}" class="form-control" placeholder="Enter Pincode" required>
                        </div>
                        <div class="mb-3 text-start">
                            <label for="aadhaar" class="form-label">Aadhar Number</label>
                            <input type="text" maxlength="12" name="aadhaar" pattern="[2-9]{1}[0-9]{3}[0-9]{4}[0-9]{4}" class="form-control" placeholder="Enter Aadhar Number" required>
                        </div>
                        <button class="btn btn-primary shadow-2 mb-4">Register</button><br>
                        <a href="/farmer">Already a Farmer? Login Here!</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.min.js"></script>
</body>

</html>